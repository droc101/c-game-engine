{
  "description": "An arbitrary 2D sprite",
  "extends": "actor",
  "display": {
    "color": -1,
    "texture_param": "texture"
  },
  "params": {
    "width": {
      "display": "Width",
      "default": 1.0,
      "type": "float",
      "description": "The in-game width of the sprite"
    },
    "height": {
      "display": "Height",
      "default": 1.0,
      "type": "float",
      "description": "The in-game height of the sprite"
    },
    "uvScale": {
      "display": "UV Scale",
      "default": 1.0,
      "type": "float",
      "description": "The horizontal UV scale factor"
    },
    "uvOffset": {
      "display": "UV Offset",
      "default": 0.0,
      "type": "float",
      "description": "The horizontal UV offset"
    },
    "texture": {
      "display": "Texture",
      "default": "level/uvtest",
      "type": "string",
      "string_hint": "texture",
      "description": "The texture of the sprite"
    },
    "unshaded": {
      "display": "Unshaded",
      "default": false,
      "type": "bool",
      "description": "Whether or not the sprite should be rendered without shading (glowing)"
    }
  }
}